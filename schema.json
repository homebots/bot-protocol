{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "number"
    },
    "constants": {
      "type": "object",
      "patternProperties": {
        ".+": {
          "type": "number"
        }
      }
    },
    "instructions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "async": {
            "type": "boolean"
          },
          "args": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string"
                    },
                    "value": {
                      "type": "number"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}
