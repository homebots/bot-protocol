{
  "compilerOptions": {
    "baseUrl": "./",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "outDir": "dist",
    "allowUmdGlobalAccess": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "typeRoots": ["node_modules"],
    "types": ["node", "jasmine"]
  },
  "files": ["src/index.ts"],
  "exclude": ["*.spec.ts"]
}
